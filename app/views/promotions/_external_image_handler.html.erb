<script type="text/javascript">
  $(document).ready(function() {
    selected_image = $("#resource_external_image_url").val();
    if(selected_image != ""){
      $("#small_image").attr('src', selected_image);
	  $("#medium_image").attr('src', selected_image);
	  $("#large_image").attr('src', selected_image);
    }else{
      $("#small_image").attr('src', "");
	  $("#medium_image").attr('src', "");
	  $("#large_image").attr('src', "");
    }

    $("#resource_external_image_url").change(function(){
      selected_image = $("#resource_external_image_url").val();
      if(selected_image != ""){
		$("#small_image").attr('src', selected_image);
		$("#medium_image").attr('src', selected_image);
		$("#large_image").attr('src', selected_image);
	  }else{
		$("#small_image").attr('src', "");
		$("#medium_image").attr('src', "");
		$("#large_image").attr('src', "");
	  }

    });
  });

</script>
