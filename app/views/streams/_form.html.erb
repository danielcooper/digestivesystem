<% form_for [@service,@stream] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :display_name %><br />
    <%= f.text_field :display_name %>
  </p>
  <%= f.hidden_field :service_id, :value => @service.id %>
  <p><%= f.submit %></p>
<% end %>
